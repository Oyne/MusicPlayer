        //                .FirstOrDefaultAsync(a => a.Id == TrackCollection.Id);

        //         if (TrackCollection is not null)
        //         {
        //             AuthorName = ((AlbumModel)TrackCollection).Artist.Name;
        //         }
        //     }
        // }

        playerService.TrackPaused += OnTrackPaused;
        playerService.TrackPlaying += OnTrackPlaying;
        playerService.TrackChanged += OnTrackChanged;

        if (CollectionId == CurrentPlayingCollectionId && !IsPaused)
        {
            IsPlaying = true;
        }
        else
        {
            IsPlaying = false;
        }
    }

    protected override async void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            jsModule = await js.InvokeAsync<IJSObjectReference>("import", "./Pages/Items/TrackCollectionCard.razor.js");
            await jsModule.InvokeVoidAsync("TrackCollectionCard.InitHover", Card);
        }
    }

    private void OpenPage()
    {
        string path = TrackCollection is AlbumModel ? "album" : "playlist";
        navigation.NavigateTo($"/{path}/{TrackCollection?.Id}");
    }


    private void InitializeTrackList()
    {
        if (TrackCollection is not null)
        {
            CollectionId = TrackCollection.Id;
            if (TrackCollection.Type == TrackCollectionType.Album)
            {
                InitializeAlbum();
            }
            else if (TrackCollection.Type == TrackCollectionType.Playlist)
            {
                InitializePlaylist();
            }
        }
    }

    private void InitializeAlbum()
    {
        if (TrackCollection is not null)
        {
            using (var db = new PlayerContext())
            {
                TrackCollection = db.Albums
                                       .Include(a => a.Artist)
                                       .FirstOrDefault(a => a.Id == TrackCollection.Id);

                if (TrackCollection is not null)
                {
                    AuthorName = ((AlbumModel)TrackCollection).Artist.Name;
                }
            }
        }
    }

    private void InitializePlaylist()
    {
        if (TrackCollection is not null)
        {
            using (var db = new PlayerContext())
            {
                TrackCollection = db.Playlists
                                .Include(p => p.User)
                                .FirstOrDefault(p => p.Id == TrackCollection.Id);

                if (TrackCollection is not null)
                {
                    AuthorName = ((PlaylistModel)TrackCollection).User.Name;
                }
            }
        }
    }

    public void OnTrackPaused(object sender, PlayPauseTrackEventArgs e)
    {
        if (CollectionId == e.TrackCollection.Id)
        {
            IsPlaying = false;
        }
        StateHasChanged();
    }

    public void OnTrackPlaying(object sender, PlayPauseTrackEventArgs e)
    {
        if (CollectionId == e.TrackCollection.Id)
        {
            IsPlaying = true;
        }
        StateHasChanged();
    }

    public void OnTrackChanged(object sender, PlayPauseTrackEventArgs e)
    {
        if (CollectionId == e.TrackCollection.Id)
        {
            IsPlaying = true;
        }
        else
        {
            IsPlaying = false;
        }
        StateHasChanged();
    }
}
