@inject IJSRuntime js
@inject NavigationManager navigation

<div @ref=Card class="card">
    <div class="image-area">
        <div class="image">
            <img src="@Album.Cover" />
            <div class="play-button">
                <i class="fa-solid fa-play"></i>
            </div>
        </div>
    </div>
    <div class="description-area">
        <a class="title" href="#">@Album.Title</a>
        <div class="author-area">
            <a class="author" href="#">@Album.Author</a>
        </div>
    </div>
</div>

@code {
    IJSObjectReference? jsModule;
    ElementReference Card;

    [Parameter]
    public AlbumModel Album { get; set; }

    protected override async void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            jsModule = await js.InvokeAsync<IJSObjectReference>("import", "./Pages/Items/AlbumCard.razor.js");
            await jsModule.InvokeVoidAsync("PlaylistCard.InitHover", Card);
        }
    }
}
