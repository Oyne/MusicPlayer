@inject IJSRuntime js
@using Spotify.Data.Images
@inject NavigationManager navigation

<div @ref=Card class="card" @onclick="OpenPlaylistPage">
    <div class="image-area">
        <div class="image">
            @if (!String.IsNullOrEmpty(Playlist.Image))
            {
                <img src="data:image/png;base64,@Playlist.Image" />
            }
            else
            {
                <img src="data:image/png;base64,@PlaylistImages.DefaultImage" />
            }
            <div class="play-button">
                <i class="fa-solid fa-play"></i>
            </div>
        </div>
    </div>
    <div class="description-area">
        <a class="title" href="#">@Playlist.Title</a>
        <div class="author-area">
            <a class="author" href="#">@* @Playlist.Author *@</a>
            @* @Playlist.Author *@
        </div>
    </div>
</div>

@code {
    IJSObjectReference? jsModule;
    ElementReference Card;

    [Parameter]
    public PlaylistModel Playlist { get; set; }

    protected override async void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            jsModule = await js.InvokeAsync<IJSObjectReference>("import", "./Pages/Items/PlaylistCard.razor.js");
            await jsModule.InvokeVoidAsync("PlaylistCard.InitHover", Card);
        }
    }

    private void OpenPlaylistPage()
    {
        navigation.NavigateTo($"/playlist/{Playlist.Id}");
    }
}
